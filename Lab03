package edu.ilstu;

/**
 * < insert description here >
 *
 * @author Scott Schmidt
 *
 */
public class StringExperiment {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		String firstName="Scott";
		String middleName="Frederick";
		String lastName="Schmidt";
		char middleInitial = middleName.charAt(0); //first index starts at 0
		int middleNum=lastName.length()/2;
		
		int lengthLastName=lastName.length();
		
		System.out.println(firstName+" " + middleName+" "+lastName);
		System.out.println(firstName+" "+middleInitial+". "+lastName);
		System.out.println("Length of last name = "+lengthLastName);
		System.out.println(lastName.charAt(middleNum));
		System.out.println(lastName.charAt(lengthLastName-1));
	}
}
