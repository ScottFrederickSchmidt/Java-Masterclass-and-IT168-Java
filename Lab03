package edu.ilstu;

/**
 * Calculate miles per gallon using a float at the end. > 
 *
 * @author Scott Schmidt
 *
 */

import java.util.Scanner;

public class MileageCalculator {

	public static void main(String[] args) {
		int miles, gallons;
		Scanner input= new Scanner(System.in);
		
		System.out.println("Enter miles traveled below:");
		miles=input.nextInt();
		System.out.println("Enter gallons used below:");
		gallons=input.nextInt();
		
		float milesPerGal= (float) miles/gallons; //To transform a type
		
		System.out.println("Your miles per gallon is:"+milesPerGal);
	}
}




